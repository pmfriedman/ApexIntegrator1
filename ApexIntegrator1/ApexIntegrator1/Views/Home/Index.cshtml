@{
    ViewBag.Title = "Home Page";
}

<div class="well-lg">    
    <form class="form-inline">
        <div class="form-group">
            <label for="txtNewAddress">Address</label>
            <input type="text" class="form-control" id="txtNewAddress" placeholder="Type Address">
        </div>        
        <button type="submit" class="btn btn-default" id="btnCreateOrder">Create Order</button>
    </form>
</div>
<div id="divOrders">

</div>


<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/rx.all.js"></script>
<script>

    var orderIx = 1;

    $(document).ready(function () {
                
        $('#btnCreateOrder').click(function () {
            var address = $('#txtNewAddress').val();
            if (address) {
                console.log(address);

                $('#txtNewAddress').val('');

                $.ajax({
                    type: "Post",
                    url: "/Order/CreateOrder",
                    data: { address: address }
                }).promise()
                .then(function (data) {
                    console.log(data);
                });

                $('#divOrders').append('<div>' + address + '</div>');
                
            }
            return false;
        });
    });
    
</script>
